@model ExpressForms.Filters.ExpressFormsFilterDate
@{
    Layout = "~/Views/Shared/ExpressFormsFilters/_FilterLayout.cshtml";
}

@{string divId = "divFilter_" + Model.FilterName; }

<div id='@divId' class='ExpressFormsFilterDateDiv' >    
    @Html.DropDownList(Model.FilterName + "Mode", new SelectListItem[]
        {
           new SelectListItem(){ Text = "At Earliest", Value="At Earliest"},
           new SelectListItem(){ Text= "At Latest", Value="At Latest"},
           new SelectListItem(){ Text= "Exactly", Value="Exactly"},
           new SelectListItem(){ Text= "Between", Value="Between"}             
        }, "- All -", new object{})

    
    @Html.TextBox(Model.FilterName + "MinDate", "", new { @class = "divFilterInput0", style="display:none;" })
    <span class='divFilterText' ></span>
    @Html.TextBox(Model.FilterName + "MaxDate", "", new { @class = "divFilterInput1", style="display:none;" })
</div>